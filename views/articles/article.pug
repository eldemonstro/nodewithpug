extends ../layouts/layout

block content
  h1= article.title
  small Written by #{article.author}
  p= article.body
  hr
  a.btn.btn-default(href='/article/edit/'+article._id) Edit
  form.pull-right(method='POST', action='/article/delete/'+article._id)
    input.btn.btn-danger(type='submit', value='Delete')
